<h1>Task list</h1>
  <ul>
    <% @tasks.each do |task|%>
    <li>
      <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to 'delete', delete_task_path(task), method: :delete, data: {confirm: "Are you sure?"}%>
      <% end %>
    </li>
  </ul>

<%= link_to "add a new task", tasks_new_path %>


